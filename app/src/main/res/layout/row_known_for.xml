<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/row_known_for_imageView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_120sdp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:padding="@dimen/_3sdp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_local_movies_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/row_known_for_description"
        style="@style/NormalDarkText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:paddingLeft="@dimen/_2ssp"
        android:paddingRight="@dimen/_2ssp"
        app:layout_constraintLeft_toLeftOf="@id/row_known_for_imageView"
        app:layout_constraintRight_toRightOf="@id/row_known_for_imageView"
        app:layout_constraintTop_toBottomOf="@id/row_known_for_imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>
